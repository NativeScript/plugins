<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="social-share" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-4">
        <ScrollView class="h-full">
          <StackLayout>
            <Button class="btn-outline btn-primary m-20 p-10" text="Share an image" tap="{{ doShareImage }}"></Button>
            <Button class="btn-outline btn-primary m-20 p-10" text="Share text" tap="{{ doShareText }}"></Button>
            <Button class="btn-outline btn-primary m-20 p-10" text="Share URL" tap="{{ doShareUrl }}"></Button>
            <Button class="btn-outline btn-primary m-20 p-10" text="Share via Twitter" tap="{{ doShareTwitter }}"></Button>
            <Button class="btn-outline btn-primary m-20 p-10" text="Share via Facebook" tap="{{ doShareFacebook }}"></Button>

            <Button class="btn-outline btn-primary m-20 p-10" text="Open modal to share" tap="{{ openModal }}"></Button>

          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>