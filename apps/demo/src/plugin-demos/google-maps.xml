<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:map="@nativescript/google-maps" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="google-maps" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>

            <map:MapView
              width="300"
              height="300"
              ready="{{onReady}}"
              mapTap="{{onTap}}"
              mapLongPress="{{onLongPress}}"
              markerTap="{{onMarkerTap}}"
            />
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>